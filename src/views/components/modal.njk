{% macro action(part_url) %}
<div class="modal-wrapper">
    <div class="modal">
        <div class="modal__title">Are you sure you want to delete this instructor?</div>
        <div class="modal__subtitle">You can't undo this action.</div>

        <form class="modal__actions" method="POST" action="/{{part_url}}?_method=DELETE">
            <button class="button button--ghost" modal-cancel-button>Cancel</button>
            <button class="button button--danger" type="submit"><div class="button__icon">{% include "../icons/trash.njk" %}</div>Delete</button>
            <input id="inputDeleteID" type="hidden" name="id">
        </form>
    </div>
</div>
{% endmacro %}