{% extends '../layout.njk' %}

{% block header %}
    {% include "../header.njk" %}
{% endblock header %}

{% block content %}
<div class="container">
<form class="register" method="POST" action="/instructors?_method=PUT" >
    <div class="register__column pt-xl">{% include "../components/profileUpload.njk" %}</div>
    <div class="register__column form">
        <h1 class="form__title">Edit instructor</h1>

        {% include "./fields.njk" %}

        <input type="hidden" name="id" value="{{ instructor.id }}">
        
        <div class="form__row form__submit mt-md">
            <div class="form__column display-flex justify-end">
                <button class="button button--primary" type="submit">Save</button>
            </div>
        </div>
    </div>
</form>
</div>
{% endblock content %}

{% block scripts %}
    <script src="/js/scripts.js"></script>
{% endblock scripts %}